<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/medium_horizontal_margin"
    android:layout_marginTop="@dimen/small_horizontal_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/tabInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/text_view_in"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginTop="@dimen/small_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_rounded_corners"
                    android:hint="@string/in_buffer_hint"
                    android:padding="@dimen/main_screen_padding"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabOutput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/small_horizontal_margin"
                    android:background="@drawable/border_rounded_corners"
                    android:scrollbars="vertical" >

                    <TextView
                        android:id="@+id/text_view_out"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/main_screen_padding"
                        android:textStyle="bold" />
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/fragment_state_info"
                    android:name="com.example.piet_droid.FragmentStateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/small_horizontal_margin"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabLog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/fragment_command_log"
                    android:name="com.example.piet_droid.FragmentCommandLog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/small_horizontal_margin" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>