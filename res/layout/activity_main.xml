<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:colorField="http://schemas.android.com/apk/res/com.example.piet_droid"
    xmlns:colorFieldEditBoard="http://schemas.android.com/apk/res/com.example.piet_droid"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:orientation="vertical"
		 >

        <ImageButton
            android:id="@+id/button_scroll_toggle"
            android:layout_width="@dimen/button_scroll_toggle_side"
            android:layout_height="@dimen/button_scroll_toggle_side"
            android:contentDescription="@string/content_description_button_scroll_toggle"
			android:src="@drawable/button_scroll_toggle"
			android:layout_gravity="top|center"/>

        <fragment
            android:id="@+id/fragment_palette_simple"
            android:name="com.example.piet_droid.FragmentPaletteSimple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/medium_horizontal_margin"
        android:layout_marginRight="@dimen/medium_horizontal_margin"
        android:layout_marginTop="@dimen/small_horizontal_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4" 
        android:background="@color/tool_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/border"
            android:orientation="vertical"
			android:padding="2dp"
			>

            <com.example.piet_droid.ScrollViewLockable
                android:id="@+id/scrollview_codelField_vertical"
                android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fillViewport="true"
                android:scrollbars="vertical" >

                <com.example.piet_droid.HorizontalScrollViewLockable
                    android:id="@+id/scrollview_codelField_horizontal"
                    android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
							android:gravity="center"
                           
                        android:orientation="vertical" >

						<com.example.piet_droid.ColorFieldViewEditBoard
							 android:layout_gravity="center"
                            android:id="@+id/codelField"
                            android:layout_width="1dp"
                            android:layout_height="1dp" 
                            colorField:cellMargin="@dimen/codel_board_cell_margin"
                            colorField:countX="@integer/field_count_codels_x"
                            colorField:countY="@integer/field_count_codels_y"
                            colorField:defaultCellColor="@color/codel_field_default_color"
                            colorField:normaliseForLowestEdge="true"
                            colorFieldEditBoard:preferedCellHeight="30dp"
                            colorFieldEditBoard:preferedCellWidth="30dp" />
                    </LinearLayout>
                </com.example.piet_droid.HorizontalScrollViewLockable>
            </com.example.piet_droid.ScrollViewLockable>
        </LinearLayout>

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="@dimen/control_widget_margin_top"
            android:layout_weight="1" >

            <!-- android:layout_height="200dp" -->
            <!-- android:maxHeight="200dp" -->
            <!-- android:minHeight="200dp" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/tabInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/text_view_in"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_marginTop="@dimen/control_widget_margin_top"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:hint="@string/in_buffer_hint"
                            android:padding="@dimen/main_screen_padding"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabOutput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/control_widget_margin_top"
                            android:background="@drawable/border"
                            android:scrollbars="vertical" >

                            <TextView
                                android:id="@+id/text_view_out"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/main_screen_padding"
                                android:textStyle="bold" />
                        </ScrollView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <fragment
                            android:id="@+id/fragment_state_info"
                            android:name="com.example.piet_droid.FragmentStateInfo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/control_widget_margin_top"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabLog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <fragment
                            android:id="@+id/fragment_command_log"
                            android:name="com.example.piet_droid.FragmentCommandLog"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/control_widget_margin_top" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>

</LinearLayout>
