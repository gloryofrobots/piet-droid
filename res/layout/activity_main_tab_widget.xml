<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:colorField="http://schemas.android.com/apk/res/com.example.piet_droid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#099"
    android:orientation="horizontal"
    
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
   
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:gravity="left|top"
        android:background="#0f5"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/fragment_control_toolbox"
            android:name="com.example.piet_droid.FragmentControlToolBox"
            android:layout_width="wrap_content"
            android:layout_gravity="left|top"
            android:layout_height="wrap_content" />

        <fragment
            android:id="@+id/fragment_palette_simple"
            android:name="com.example.piet_droid.FragmentPaletteSimple"
            android:layout_width="wrap_content"
            android:layout_gravity="left|top"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip" />

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                         >
                        <fragment
                            android:id="@+id/fragment_in_out_buffers"
                            android:name="com.example.piet_droid.FragmentInOutBuffers"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                         >

                        <fragment
                            android:id="@+id/fragment_state_info"
                            android:name="com.example.piet_droid.FragmentStateInfo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>

    <com.example.piet_droid.ColorFieldView
        android:id="@+id/codelField"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_weight="2"
        android:layout_gravity="right"
        colorField:countX="@integer/field_count_codels_x"
        colorField:countY="@integer/field_count_codels_y"
        colorField:defaultCellColor="@color/codel_field_default_color"
        colorField:normaliseForLowestEdge="true" />

</LinearLayout>