<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorField="http://schemas.android.com/apk/res/com.example.piet_droid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <com.example.piet_droid.ColorFieldView
        android:id="@+id/colorPalette"
        android:layout_width="240dp"
        android:layout_height="120dp"
        colorField:countX="@integer/palette_count_codels_y"
        colorField:countY="@integer/palette_count_codels_x"
        colorField:defaultColor="@color/codel_field_default_color"
        colorField:palette="@array/colors_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="#000"
        android:layout_marginLeft="5dp"
        >

        <View
            android:id="@+id/white_palette"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@color/white"
            android:layout_margin="1dp"
            />
        
         <View
            android:id="@+id/black_palette"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@color/black"
             />
    </LinearLayout>
</LinearLayout>